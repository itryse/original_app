<div class="items-sell-contents">
  <header class="items-sell-header">
  </header>
  <div class="items-sell-main">
    <%= form_with model: @post, local: true do |f| %>

      <div class="new-items">

        <div class="weight-bold-text">
          目標
        </div>
        <%= f.text_area :title, class:"items-text", id:"item-name", placeholder:"転職先に内定をいただく！", maxlength:"40" %>
        
        <div class="items-explain">
          <div class="weight-bold-text">
            目標達成時期
          </div>
          <%= f.text_area :target_time, class:"items-text", id:"item-info", placeholder:"今年の8月末まで" ,rows:"2" ,maxlength:"150" %>
        </div>

        <div class="items-explain">
          <div class="weight-bold-text">
            ジャンル
          </div>
          <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"items-text"}) %>
        </div>
      </div>

      <div class="img-upload">
        <div class="click-upload">
          <p>写真をアップロード</p>
          <%= f.file_field :image, id:"item-image" %>
        </div>
      </div>

      <div class="sell-btn-contents">
        <%= f.submit "新規投稿する" ,class:"sell-btn" %>
        <%=link_to 'もどる', root_path, class:"back-btn" %>
      </div>
    <% end %>
  </div>
</div>