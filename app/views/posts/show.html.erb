<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @post.title %>
      </p>
      <%= link_to "#{@post.user.nickname}", class: :prototype__user %>
      <% if current_user == @post.user%>
        <div class="prototype__manage">
          <%= link_to "編集", edit_post_path(@post), class: :prototype__btn %>
          <%= link_to "削除", post_path(@post), method: :delete, class: :prototype__btn %>
        </div>
      <% end %>
      <div class="prototype__image">
        <%= image_tag @post.image %>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">目標達成時期</p>
          <p class="detail__message">
            <%= @post.target_time %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">ジャンル</p>
          <p class="detail__message">
            <%= @post.genre %>
          </p>
        </div>
      </div>
      <div class="prototype__comments">
        <% if user_signed_in? %>
          <%= form_with model: [@post], local: true do |f|%>
            <div class="field">
              <%= f.label :text, "コメント" %><br />
              <%= f.text_field :text %>
            </div>
            <div class="actions">
              <%= f.submit "送信", class: :form__btn  %>
            </div>
          <% end %> 
        <% end %>
        <%# <ul class="comments_lists">
          <% @comments.each do |comment| %>
            <%# <li class="comments_list">
              <%= comment.text%>
              <%# <%= link_to "（#{comment.user.name}）", user_path(comment.user), class: :comment_user %>
            <%# </li>
          <% end %>
        <%# </ul> %>
      </div>
    </div>
  </div>
</main>


