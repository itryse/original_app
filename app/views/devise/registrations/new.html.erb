<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="position">

    <div class ="start">
      ユーザー登録
    </div>

    <div class="form-group">
        <label class="form-text">ニックネーム</label>
      <%= f.text_area :nickname, id:"nickname", placeholder:"佐藤太郎", class:"input-default", rows:"1" %>
    </div>

    <div class="form-group">
        <label class="form-text">メールアドレス</label>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>

    <div class="form-group">
        <label class="form-text">パスワード</label>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>

    <div class="form-group">
        <label class="form-text">パスワード(確認)</label>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>

    <div class="form-group">
      <%= f.label :gender, "性別" %><br/>
      <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"input-default"}) %>
    </div>

    <div class="form-group">
      <%= f.label :age, "年齢" %><br/>
      <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"input-default"}) %>
    </div>

    <div class="form-group">
      <%= f.label :profile, "自己紹介" %><br/>
      <%= f.text_area :profile, id:"user_profile", class:"input-default", placeholder:"よろしくお願いします。", rows:"10" %>
    </div>

    <div class="actions"><br/>
      <%= f.submit "新規登録", class:"name-form" %>
    </div>
    
  </div>
<% end %>

