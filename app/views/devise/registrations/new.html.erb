<div class ="start">冒険をはじめる</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="position">

    <div class="field">
      <%= f.label :nickname, "ユーザー名" %><br/>
      <%= f.text_field :nickname, id:"user_nickname", class:"name-form" %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス" %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"name-form" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %><br/>
      <%= f.password_field :password, autocomplete: "new-password", class:"name-form" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード(確認)" %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"name-form" %>
    </div>

    <div class="field">
      <%= f.label :gender, "性別" %><br/>
      <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"name-form"}) %>
    </div>

    <div class="field">
      <%= f.label :age, "年齢" %><br/>
      <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"name-form"}) %>
    </div>

    <div class="field">
      <%= f.label :occupation, "職業" %><br/>
      <%= f.collection_select(:occupation_id, Occupation.all, :id, :name, {}, {class:"name-form"}) %>
    </div>

    <div class="field">
      <%= f.label :profile, "自己紹介" %><br/>
      <%= f.text_area :profile, id:"user_profile", class:"message-form", placeholder:"例）一生懸命頑張りたいと思います！" %>
    </div>

    <div class="actions"><br/>
      <%= f.submit "新規登録", class:"name-form" %>
    </div>

  </div>

<% end %>

<%= render "devise/shared/links" %>

