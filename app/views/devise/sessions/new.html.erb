<%= form_with model: @user, url: new_user_session_path, class: 'registration-main', local: true do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="items-sell-main">
    <div class="new-items">

      <div class ="start">
        ログイン
      </div>

      <div class="form-group">
          <label class="form-text">メールアドレス</label>
        <%= f.email_field :email, class:"input-default", id:"email", autofocus: true %>
      </div>

      <div class="form-group">
          <label class="form-text">パスワード</label>
        <%= f.password_field :password, class:"input-default", id:"password" %>
      </div>

      <div class="sell-btn-contents"><br/>
        <%= f.submit "ログイン", class:"sell-btn" %>
        <%=link_to 'もどる', root_path, class:"back-btn" %>
      </div>

    </div>
  </div>
<% end %>
